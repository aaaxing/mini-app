.wx-mask{
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.wx-modal{
    position: fixed;
    z-index: 5000;
    width: 70%;
    max-width: 600rpx;
    top: 40%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    text-align: left;
    border-radius: 3px;
    overflow: hidden;
}
.wx-modal-title{
    padding: 10px 10px 0px;
    text-align:center;
}
.wx-modal-content{
    padding: 10px 10px 0px;
    min-height: 40px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
}
.wx-modal-footer{
    text-align:center;
    display: flex;
    align-items: center;
    position: relative;
    line-height: 35px;
}
.wx-modal-footer::before{
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D5D5D6;
    color: #D5D5D6;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.wx-modal-btn{
    display: block;
    -webkit-flex: 1;
    flex: 1;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    position: relative;
}
.wx-modal-footer .wx-modal-btn:nth-of-type(1){
    color: gray;
}
.wx-modal-footer .wx-modal-btn:nth-of-type(2){
    color: #539FDD;
}
.wx-modal-footer .wx-modal-btn:nth-of-type(2):after{
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #D5D5D6;
    color: #D5D5D6;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleX(0.5);
    transform: scaleX(0.5);
}
.wx-modal-btn-hover{
  background:#ECECEC
}
